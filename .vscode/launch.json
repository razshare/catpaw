    "version": "0.2.0",
    "configurations": [
        {
            "name": "hello-world",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/start.php",
            "cwd": "${fileDirname}",
            "port": 0,
            "args": [
                "examples/hello-world/main.php"
            ],
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        {
            "name": "modules",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/start.php",
            "cwd": "${fileDirname}",
            "port": 0,
            "args": [
                "examples/modules/main.php"
            ],
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        }
    ]
}