    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current file (paw)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/catpaw/core/scripts/start.php",
            "cwd": "${workspaceFolder}",
            "args": [
                "${file}"
            ],
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        }
    ]
}