{
  "name": "catpaw/core",
  "description": "CatPaw core",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "cli",
    "server",
    "http",
    "websocket",
    "catpaw"
  ],
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com"
    }
  ],
  "scripts": {
    "load": "composer dump-autoload -o",
    "prod:test": [],
    "prod:start": "php ./bin/start --entry='./preview/server.php' --libraries='./preview/lib/'",
    "prod:start:build": "php -dphar.readonly=0 ./bin/start --entry='./preview/build.php' --libraries='./preview/lib/'",
    "prod:build": "php -dphar.readonly=0 ./build.phar --init-config --optimize",
    "dev:fix": [
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix src",
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix tests"
    ],
    "dev:test": [],
    "dev:start": "php -dxdebug.mode=debug -dxdebug.start_with_request=yes ./bin/start --entry='./preview/server.php' --libraries='./preview/lib/' --info",
    "dev:start:build": "php -dphar.readonly=0 -dxdebug.mode=debug -dxdebug.start_with_request=yes ./bin/start --entry='./preview/build.php' --libraries='./preview/lib/' --info",
    "dev:watch": "php ./bin/start --entry='./preview/main.php' --libraries='./preview/lib/' --resources='./resources/' --info --watch --php='php -dxdebug.mode=debug -dxdebug.start_with_request=yes'",
    "dev:build": "php -dxdebug.mode=off -dxdebug.start_with_request=no -dphar.readonly=0 ./build.phar --init-config",
    "download:build": "[ ! -f build.phar ] && wget https://github.com/tncrazvan/catpaw-build/releases/latest/download/build.phar || echo ''",
    "download:psalm": "[ ! -f psalm.phar ] && wget https://github.com/vimeo/psalm/releases/latest/download/psalm.phar || echo ''",
    "post-autoload-dump": [
      "@download:psalm",
      "@download:build"
    ],
    "post-create-project-cmd": [
      "@download:psalm",
      "@download:build"
    ]
  },
  "autoload": {
    "psr-4": {
      "CatPaw\\": [
        "src/lib/Core"
      ],
      "CatPaw\\Build\\": [
        "src/lib/Build"
      ],
      "CatPaw\\Web\\": [
        "src/lib/Web"
      ]
    },
    "files": [
      "src/scripts/Core/constants.php",
      "src/scripts/Core/functions.php",
      "src/scripts/Web/constants.php",
      "src/scripts/Web/functions.php",
      "src/scripts/Build/main.php",
      "src/scripts/Build/build.php"
    ]
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "ext-mbstring": "*",
    "ext-pcntl": "*",
    "ext-openssl": "*",
    "ext-zlib": "*",
    "erusev/parsedown": "^1.7",
    "vlucas/phpdotenv": "^5.4",
    "monolog/monolog": "^3.3",
    "react/async": "^4.1.0",
    "react/child-process": "^0.6.5",
    "react/http": "^1.9.0",
    "amphp/amp": "^3.0",
    "revolt/event-loop": "^1.0",
    "amphp/process": "^2.0",
    "amphp/byte-stream": "^2.1",
    "amphp/file": "^3.0",
    "amphp/http-server": "^3.3"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "preferred-install": "dist"
  }
}
