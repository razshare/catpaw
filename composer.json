{
  "name": "catpaw/core",
  "description": "A Php Http & WebSocket server",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "cli",
    "server",
    "http",
    "websocket",
    "catpaw"
  ],
  "scripts": {
    "load": "@composer dump-autoload -o",
    "script": "@php scripts/start.php",
    "start:example:hello-world": "@script examples/hello-world/main.php",
    "dev:example:hello-world": "@start:example:hello-world dev 100 && @dev:example:hello-world",
    "start:example:modules": "@script examples/modules/main.php",
    "dev:example:modules": "@start:example:modules dev 100 && @dev:example:modules",
    "start:example:svelte": "@script examples/modules/main.php",
    "dev:example:svelte": "@start:example:modules dev 100 && @dev:example:modules"
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "amphp/amp": "^2.6",
    "amphp/http-server": "^2.1",
    "amphp/log": "^1.1",
    "amphp/websocket-server": "^2.0",
    "erusev/parsedown": "^1.7",
    "amphp/file": "^2.0",
    "amphp/process": "^1.1",
    "ext-openssl": "*",
    "ext-zlib": "*"
  },
  "config": {
    "preferred-install": "dist"
  },
  "autoload": {
    "psr-4": {
      "CatPaw\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Examples\\": [
        "examples/modules/lib/"
      ]
    }
  }
}
