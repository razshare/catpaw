{
  "name": "catpaw/catpaw",
  "description": "The catpaw project",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "cli",
    "server",
    "http",
    "catpaw",
    "amphp",
    "async",
    "di"
  ],
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com"
    }
  ],
  "scripts": {
    "load": "composer dump-autoload -o",
    "prod:start": "php -dphar.readonly=0 ./bin/start --libraries='./src/lib' --entry='./src/main.php'",
    "prod:build": "@prod:start --build --build-config='./build.yml' --build-optimize",
    "prod:test": [
      "php vendor/bin/phpunit tests"
    ],
    "prod:fix": [
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix src",
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix tests"
    ],
    "dev:start": "php -dxdebug.mode=debug -dxdebug.start_with_request=yes -dphar.readonly=0 ./bin/start --libraries='./src/lib' --entry='./src/main.php'",
    "dev:build": "@dev:start --build --build-config='./build.yml' --build-optimize",
    "dev:test": [
      "php -dxdebug.mode=debug -dxdebug.start_with_request=yes vendor/bin/phpunit tests"
    ],
    "dev:fix": [
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix src",
      "php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix tests"
    ],
    "download:psalm": "[ ! -f psalm.phar ] && wget https://github.com/vimeo/psalm/releases/latest/download/psalm.phar || echo ''",
    "post-autoload-dump": [
      "@download:psalm"
    ],
    "post-create-project-cmd": [
      "@download:psalm"
    ]
  },
  "autoload": {
    "psr-4": {
      "CatPaw\\Core\\": [
        "src/lib/Core"
      ],
      "CatPaw\\Build\\": [
        "src/lib/Build"
      ],
      "CatPaw\\Web\\": [
        "src/lib/Web"
      ],
      "CatPaw\\Queue\\": [
        "src/lib/Queue"
      ],
      "CatPaw\\Schedule\\": [
        "src/lib/Schedule"
      ],
      "CatPaw\\Store\\": [
        "src/lib/Store"
      ],
      "CatPaw\\RaspberryPi\\": [
        "src/lib/RaspberryPi"
      ]
    },
    "files": [
      "src/scripts/Core/constants.php",
      "src/scripts/Core/functions.php",
      "src/scripts/Web/constants.php",
      "src/scripts/Web/functions.php",
      "src/scripts/Build/functions.php",
      "src/scripts/Store/functions.php"
    ]
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "ext-mbstring": "*",
    "ext-pcntl": "*",
    "ext-openssl": "*",
    "ext-zlib": "*",
    "ext-yaml": "*",
    "vlucas/phpdotenv": "^5.4",
    "monolog/monolog": "^3.3",
    "revolt/event-loop": "^1.0",
    "amphp/amp": "^3.0",
    "amphp/process": "^2.0",
    "amphp/byte-stream": "^2.1",
    "amphp/file": "^3.0",
    "amphp/http-server": "^3.3",
    "amphp/http-client": "^5.0",
    "amphp/parallel": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "preferred-install": "dist"
  }
}
